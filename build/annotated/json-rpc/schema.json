        "id": {
          "$ref": "#/definitions/RequestId",
          "x-jsonld-id": "http://json-rpc.org/ontology#hasId",
          "x-jsonld-type": "@id"
        },
        "jsonrpc": {
          "const": "2.0",
          "type": "string",
          "x-jsonld-id": "http://json-rpc.org/ontology#"
        }
      },
      "required": [
        "error",
        "id",
        "jsonrpc"
      ],
      "type": "object"
    },
    "JSONRPCMessage": {
      "$anchor": "JSONRPCMessage",
      "anyOf": [
